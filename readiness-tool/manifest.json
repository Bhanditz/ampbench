{
  "manifest_version": 2,

  "name": "AMP Readiness Tool",
  "description": "See at a glance the various third party vendors on the page and whether they have AMP support.",
  "version": "2.1",

  "icons": {
    "16": "amp.png",
    "48": "amp.png",
    "128": "amp.png"
  },
  "browser_action": {
    "default_icon": "amp.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "js": ["content_script.js"],
      "matches": ["<all_urls>"],
      "all_frames": false,
      "exclude_globs": [
        "*google.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "apps.json"
  ],
  "permissions": [
    "activeTab",
    "<all_urls>",
    "webNavigation",
    "tabs",
    "https://ajax.googleapis.com/",
    "storage",
    "unlimitedStorage"
  ]
}
